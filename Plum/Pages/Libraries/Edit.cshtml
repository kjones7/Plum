@page "{id:int}"
@model Plum.Pages.Libraries.EditModel
@{
    ViewData["Title"] = "Edit Library";
}

<h2>Edit Library</h2>

<form method="POST">
    <div class="form-group">
        <h3 class="panel-title"><b>New Title</b></h3>
        <input asp-for="NewTitle" class="form-control" value="@Model.Library.Title"/>
        <span asp-validation-for="NewTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <h3 class="panel-title"><b>New Description</b></h3>
        <input asp-for="NewDescription" class="form-control" value="@Model.Library.Description" />
        <span asp-validation-for="NewDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">Edit</button>
    </div>
</form>

<div>
    <a asp-page="/Library">Back to library</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


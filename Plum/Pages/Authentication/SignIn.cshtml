@page
@model Plum.Pages.Authentication.SignInModel

@{
    ViewData["Title"] = "SignIn";
}

<div class="jumbotron">
    <h1>Sign In</h1>
    <p class="lead text-left">Authenticate using one of these external providers:</p>

    @foreach (var scheme in Model.AuthenticationSchemes)
    {
        <form method="post">
            <input type="hidden" name="Provider" value="@scheme.Name" />
            <input type="hidden" asp-for="ReturnUrl" />

            <button class="btn btn-lg btn-success" type="submit">Connect using @scheme.DisplayName</button>
        </form>
    }
</div>